<div class="clo-md-12">
  <div class="group">
    <%= link_to("New Movie", new_group_path, class: "btn btn-primary pull-right") %>
  </div>

  <table class="table table-hover">
    <thead>
      <tr>
        <th> # </th>
        <th> Title </th>
        <th> Director </th>
        <th> Stars </th>
        <th> Synopsis </th>
        <th> Creator </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td> # </td>
        <td> <%= link_to(group.title, group_path(group)) %> </td>
        <td> <%= group.director %> </td>
        <td> <%= group.stars %> </td>
        <td> <%= render_group_synopsis(group) %> </td>
        <td> <%= group.user.email %> </td>
        <td>
          <% if current_user && current_user == group.user %>
             <%= link_to("Edit", edit_group_path(group), class: "btn btn-default btn-sm") %>
             <%= link_to("Delete", group_path(group),  class: "btn btn-default btn-sm",
                          method: :delete, data: { confirm: "Are you sure?" }) %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
