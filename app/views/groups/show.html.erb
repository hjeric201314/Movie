<div class="col-md-12">
  <div class="group">

    <%= link_to("Write a Review", new_group_post_path(@group), class: "btn btn-default pull-right") %>

    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
    <h2><%= @group.title %></h2>
  <div class="row">
    <div class="col-md-4">Director: <%= @group.director %></div>
    <div class="col-md-4">Stars: <%= @group.stars %></div>
    <div class="col-md-4">Synopsis: <%= @group.synopsis %></div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>评论内容</th>
        <th>发表者</th>
        <th>发表时间</th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.user.email %></td>
        <td><%= post.created_at %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= will_paginate @posts %>
</div>
