<div class="col-md-4">
  <div class="group">
    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary pull-right")%>
    <% end %>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.director %></p>
  <p><%= @group.stars %></p>
  <p><%= @group.synopsis %></p>
</div>
